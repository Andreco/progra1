#include "stdafx.h"

#include <iostream>

#include "conio.h"

 

using namespace std;

 

void main()

{

       double f;

       cout << "Nota.-" << endl;

       cout << "La fecha debe estar en formato Dia/Mes (Ejemplo : 21/09)" << endl;

       cout << ">>>>Ingrese la fecha: ";

       cin >> f;

       cout << endl;

       if (f >= 21/10 && f < 21/03){

             cout << ">>Verano<<" << endl;

       }else{

             if (f >= 21/03 && f < 21/06){

                    cout << ">>Oto√±o<<" << endl;

             }else{

                    if (f >= 21/06 && f < 21/9){

                           cout << ">>Invierno<<";

                    }else{

                           cout << ">>Primavera<<";

                    }

             }

       }

getch();

}
