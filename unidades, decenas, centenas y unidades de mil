#include "stdafx.h"
#include <iostream> 
#include "conio.h" 
 using namespace std; 

 void main() 
 { 
	 int n,m,d,c,u,opcion; 
		 do  
		 {
			 cout<<"Elija la opcion"<<endl; 
			 cout<<"1.- Unidades"<<endl; 
			 cout<<"2.- Decenas"<<endl;  
			 cout<<"3.- Centenas"<<endl; 
			 cout<<"4.- Unidades de mil"<<endl;
			 getch(); 
			 cin>>opcion; 
			 switch (opcion)
			 {
 
			 case 1: 
				{cout<<"ingrese numero de una cifra positivo"; 
				 cin>>n; 
				 u=(n%10); 
				 cout<<"en unidades es"<<u; 
				 getch();
				};break; 
			 
			case 2: 
				{
				cout<<"ingrese numero de dos cifras positivo"; 
				cin>>n; 
				d=(n/10)%10;
				cout<<"en decenas es"<<d;
				};break;
			
			
			
			case 3: 
				 {
					 cout<<"ingrese numero de tres cifras positivo"; 
					 cin>>n;
					 c=(n/100); 
					 cout<<"en centenas es"<<c; 
					 getch(); };break;
			case 4: 
				{
					cout<<"ingrese numero de cuatro cifras cifras"; 
					cin>>n; 
				m=(n/1000);
						cout<<"en unidades de mil es"<<m;
					getch();
				};break;
		 case 0: 
		 cout<<"salir";break; 
	 default: cout<<"opcion invalida"<<endl;
     }
 
	 } while (opcion != 0);
     getch();
      }
